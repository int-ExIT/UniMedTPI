doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width initial-scale=1.0")
    //- Icono
    link(rel="icon" href="../public/images/logo_unimed.png" type="image/png")
    //- Bootstrap
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css")
    //- Style Layout
    link(rel="stylesheet" href="../public/styles/index.css")
    link(rel="stylesheet" href="../public/styles/dinamic.css")
    //- Other Styles
    each style in styles
      link(rel="stylesheet" href=style)
    title=title
  body 
    header
      block header
    main
      .the_main
        block left_main
        #main.main_center 
          table(id="myTable" class="table table-striped table-dark ") 
            thead 
              tr
                th(style="text-align: center; width: 10px;") #
                th(style="width: 100px;") Nombre
                th(style="width: 100px;") Apellido
                th(style="width: 100px;") DNI
                th(style="width: 130px;") Egreso
                th(style="width: 100px;") Contacto
                th(style="width: 300px;") eMail
                th(colspan="2") 
            tbody(id="tr_body")
            tfoot 
              tr 
                th(colspan="9") Filtrar por: 
                  label(for="filter") Pacientes dados de alta
                  input(type="checkbox" name="filter" id="filter")
        block main_right
    template(id="my_template")
      tr
        td(style="width: 85px;")
          button.update Actualizar
        td(style="width: 85px;")
          button.delete Eliminar
    footer 
      block footer
      .footer 
        p &copy; 2025 MiSitioWeb
    //- Bootstrap
    script(type="module" src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js" defer)
    //- Other Scripts
    each script in scripts
      script(type="module" src=script defer)