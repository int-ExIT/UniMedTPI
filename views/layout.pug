doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width initial-scale=1.0")
    //- Icono
    link(rel="icon" href="../public/images/logo_unimed.png" type="image/png")
    //- Bootstrap
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css")
    //- Style Layout
    link(rel="stylesheet" href="../public/styles/index.css")
    link(rel="stylesheet" href="../public/styles/dinamic.css")
    //- Other Styles
    each style in styles
      link(rel="stylesheet" href=style)
    title=title
  body 
    header
      block header
    main
      .the_main
        block left_main
        #main.main_center 
          table(id="myTable" name=name class="table table-striped table-dark overflow-auto") 
            thead 
              tr
                th # 
                th Nombre 
                th Apellido 
                th DNI 
                th Egreso <!-- Manipular -->
                th Numero <!-- Manipular -->
                th eMail <!-- Manipular -->
                th(colspan="2") 
            tbody(id="tr_body")
        block main_right
    template(id="my_template")
      tr
        td
          button.update Actualizar
        td
          button.delete Eliminar
    footer 
      block footer
      .footer 
        p &copy; 2025 MiSitioWeb
    //- Bootstrap
    script(type="module" src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js" defer)
    //- Other Scripts
    each script in scripts
      script(type="module" src=script defer)